<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ca5f5"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.artem.fitorflab.DetailsActivity">

    <TextView
        android:id="@+id/exerciseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight Lifting"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/exerciseImg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/weight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#20000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Mark it complete!"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/checkBox"
            style="@style/CheckBoxByMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete set 1"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:paddingLeft="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <CheckBox
            style="@style/CheckBoxByMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete set 1"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:paddingLeft="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <CheckBox
            style="@style/CheckBoxByMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete set 1"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:paddingLeft="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <CheckBox
            style="@style/CheckBoxByMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete set 1"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:paddingLeft="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <CheckBox
            style="@style/CheckBoxByMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete set 1"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:paddingLeft="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <CheckBox
            style="@style/CheckBoxByMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete set 1"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right"
            android:paddingLeft="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>
</LinearLayout>
